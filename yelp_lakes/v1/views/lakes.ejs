<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpLakes!</h1>
        <p>View our hand-picked lakes from all over the world!</p>
        <a class="btn btn-primary" href="/new">Add Lakes</a>
        
    </header>
    


    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% lakes.forEach(function(lake){ %>
           <div class="col-md-3">
               <div class="thumbnail">
                    <img src="<%= lake.image %>">
               </div>
               <div class="caption">
                   <h4><%= lake.name %></h4>
               </div>
    
            
            </div>  
        <% }); %>
        
    </div>
</div>


<% include partials/footer %>